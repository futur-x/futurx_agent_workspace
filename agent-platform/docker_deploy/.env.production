# Production Environment Variables
# Copy this file to .env and update with your actual values

# Backend Configuration
NODE_ENV=production
PORT=6173
DATABASE_URL=file:/app/data/faw.db

# Security
JWT_SECRET=your-super-secret-jwt-key-please-change-this
SESSION_EXPIRY=30m

# CORS
CORS_ORIGIN=http://localhost:5173

# File Upload
MAX_FILE_SIZE=10485760

# API Configuration
# Update these with your actual server IP/domain when deploying
VITE_API_BASE_URL=http://localhost:6173/api

# Optional: Dify API defaults (can be overridden per agent)
# DIFY_API_URL=https://api.dify.ai
# DIFY_API_KEY=your-default-key